import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Digite a temperatura: ");
        double temp = scanner.nextDouble();

        System.out.println("Digite a unidade de origem (Celsius ou Fahrenheit): ");
        String unidade_origem = scanner.next();

        if (unidade_origem.equalsIgnoreCase("Celsius")) {
            double temp_fahrenheit = (temp * 9/5) + 32;
            System.out.println("A temperatura em Fahrenheit é: " + temp_fahrenheit);
        } else if (unidade_origem.equalsIgnoreCase("Fahrenheit")) {
            double temp_celsius = (temp - 32) * 5/9;
            System.out.println("A temperatura em Celsius é: " + temp_celsius);
        } else {
            System.out.println("Unidade de origem inválida. Por favor, insira Celsius ou Fahrenheit.");
        }
    }
}